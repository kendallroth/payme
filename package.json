{
  "name": "payme",
  "description": "Simple mobile app to track who has paid for an event.",
  "version": "2.0.0",
  "keywords": [
    "app",
    "react-native"
  ],
  "private": true,
  "homepage": "https://github.com/kendallroth/payme",
  "bugs": "https://github.com/kendallroth/payme/issues",
  "author": {
    "email": "kendall@kendallroth.ca",
    "name": "Kendall Roth",
    "url": "https://www.kendallroth.ca"
  },
  "repository": {
    "url": "https://github.com/kendallroth/payme"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**/*.{ts,tsx,json}\"",
    "lint": "eslint .",
    "start": "expo start",
    "start:wsl": "REACT_NATIVE_PACKAGER_HOSTNAME=$(netsh.exe interface ip show address 'Ethernet' | grep 'IP Address' | sed -r 's/^.*IP Address:\\W*//') expo start",
    "start:android": "expo start --android",
    "start:ios": "expo start --ios",
    "test": "npm run test:only",
    "test:cover": "npm run test:only -- --coverage",
    "test:only": "jest --verbose",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.4",
    "@react-native-async-storage/async-storage": "~1.15.0",
    "@react-native-community/datetimepicker": "4.0.0",
    "@react-native-masked-view/masked-view": "0.2.6",
    "@react-navigation/material-bottom-tabs": "^6.0.5",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.2.5",
    "@react-navigation/stack": "^6.0.7",
    "@reduxjs/toolkit": "^1.6.2",
    "country-flag-icons": "^1.4.14",
    "dayjs": "^1.10.6",
    "expo": "^44.0.0",
    "expo-constants": "~13.0.0",
    "expo-device": "~4.1.0",
    "expo-linking": "~3.0.0",
    "expo-localization": "~12.0.0",
    "expo-splash-screen": "~0.14.0",
    "expo-status-bar": "~1.2.0",
    "faker": "^5.5.3",
    "fast-sort": "^3.1.1",
    "i18next": "^21.4.1",
    "intl-pluralrules": "^1.3.1",
    "patch-package": "^6.4.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "^7.20.5",
    "react-i18next": "^11.13.0",
    "react-native": "0.64.3",
    "react-native-gesture-handler": "~2.1.0",
    "react-native-get-random-values": "~1.7.0",
    "react-native-loading-spinner-overlay": "^2.0.0",
    "react-native-modal": "^12.1.0",
    "react-native-modal-datetime-picker": "^10.2.0",
    "react-native-paper": "^4.9.2",
    "react-native-reanimated": "~2.3.1",
    "react-native-safe-area-context": "3.3.2",
    "react-native-screens": "~3.10.1",
    "react-native-svg": "12.1.1",
    "react-native-vector-icons": "^8.1.0",
    "react-native-web": "0.17.1",
    "react-redux": "^7.2.6",
    "redux-persist": "^6.0.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@expo/config": "^6.0.11",
    "@react-native-community/eslint-config": "^3.0.1",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "~0.64.12",
    "@types/react-native-loading-spinner-overlay": "^0.5.3",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^7.0.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.11.0",
    "husky": "^7.0.4",
    "jest-expo": "^44.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.3.2",
    "typescript": "~4.3.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
